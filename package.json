{
    "name": "ts-payline",
    "version": "1.0.0",
    "description": "NodeJS SDK for payline.com API",
    "main": "index",
    "scripts": {
        "test": "jest",
        "serverless_win_fix": "ln -s node_modules .build/node_modules && ln -s package.json .build/package.json",
        "offline": "serverless offline --skipCacheInvalidation start",
        "deploy-appsync": "serverless deploy-appsync",
        "update-appsync": "serverless update-appsync",
        "delete-appsync": "serverless delete-appsync",
        "deploy": "serverless deploy && npm run update-appsync",
        "lint": "eslint src/**/*.ts",
        "format": "eslint src/**/*.ts --fix"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "homepage": "https://github.com/tgorka/payline",
    "repository": {
        "type": "git",
        "url": "git://github.com/tgorka/payline.git"
    },
    "engine": {
        "node": ">=6"
    },
    "author": "Tomasz Gorka",
    "license": "MIT",
    "dependencies": {
        "debug": "^4.3.1",
        "path": "^0.12.7",
        "soap": "^0.35.0"
    },
    "devDependencies": {
        "30-seconds-of-code": "^1.2.3",
        "@types/debug": "^4.1.5",
        "@types/jest": "^26.0.23",
        "@types/node": "^9.4.0",
        "@typescript-eslint/eslint-plugin": "^4.23.0",
        "@typescript-eslint/parser": "^4.23.0",
        "eslint": "^7.26.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "jest": "^26.6.3",
        "prettier": "^2.3.0",
        "serverless": "^2.41.2",
        "serverless-appsync-plugin": "^1.11.3",
        "serverless-offline": "^7.0.0",
        "serverless-plugin-typescript": "^1.1.9",
        "ts-jest": "^26.5.6",
        "typescript": "^4.2.4",
        "yarn": "^1.22.10"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn lint"
        }
    }
}
